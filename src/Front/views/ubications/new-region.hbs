<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Ingresar Nueva Region</h3>
        </div>
        <div class="card-body">
            <form action="/ubications/new-region" method="POST">
                <div class="form-group">
                    <textarea name="region" placeholder="Nombre Region" class="form-control"></textarea>                    
                </div>
                <div class="form-group">
                    <textarea name="pais" placeholder="Nombre Pais" class="form-control"></textarea>                    
                </div>
                <div class="form-group">
                    <textarea name="ciudad" placeholder="Nombre Ciudad" class="form-control"></textarea>                    
                </div>                                
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
