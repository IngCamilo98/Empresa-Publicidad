<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Contacto</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" value="{{note.nombre}}">
                </div>
                <div class="form-group">
                    <input type="text" name="apellido" class="form-control" value="{{note.apellido}}">
                </div>
                <div class="form-group">
                    <input type="text" name="cargo" class="form-control" value="{{note.cargo}}">
                </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" value="{{note.email}}">
                </div>
                <div class="form-group">
                    <input type="text" name="compania" class="form-control" value="{{note.compania}}">
                </div>
                <div class="form-group">
                    <input type="text" name="canal" class="form-control" value="{{note.canal}}">
                </div>                                                                              
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>